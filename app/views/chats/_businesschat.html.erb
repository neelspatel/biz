  <body>

  <div id = "create-form">
  <%= form_tag '/chats', :remote => true do %>
    <div><%= hidden_field(:merchant_id, :value, :value => current_merchant.id) %></div>
    <div><%= hidden_field(:user_id, :value, :value => params[:current_chat_user_id]) %></div>
    <div><%= hidden_field(:from, :value, :value => "merchant") %></div>

    <div id = "form-fields">
      <div class="field" style = "height:20px;">
        <%=text_field_tag 'content'%>    
      </div>      
    </div>
    <div class="actions">
      <%= submit_tag 'Send' %>
    </div>
    
  <% end %>

  </div>
  <body>
</html>

