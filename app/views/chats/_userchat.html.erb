<!DOCTYPE html>
<html>
  <head>    
  </head>
  <body>

  <div id = "create-form">
  <%= form_tag '/chats' do %>
    <div><%= hidden_field(:merchant_id, :value, :value => current_user.current_merchant_id) %></div>
    <div><%= hidden_field(:user_id, :value, :value => current_user.id) %></div>
    <div><%= hidden_field(:from, :value, :value => "user") %></div>

    <div id = "form-fields">
      <div class="field">
        
        <%=text_field_tag 'chat_content', nil, :placeholder => "Chat something here!"%>    
      </div>      
    </div>
    <div class="actions">
      <%= submit_tag 'Send' %>
    </div>
    
  <% end %>

  </div>
  <body>
</html>

