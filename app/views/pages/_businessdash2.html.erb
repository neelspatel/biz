
<!DOCTYPE html>
<html lang="en">
	<head>
	</head>
	<body>
		
		
		<div id="header">
			<h1 style = "color:#DEA;">ADABA</h1>		
		</div>
				
		<% @coupon_list = Widget.find(:last, :conditions => {:merchant_id => current_merchant.id, :widget_type => "coupon"}) %>
		<% @survey_list = Widget.find(:last, :conditions => {:merchant_id => current_merchant.id, :widget_type => "survey"}) %>
            
		<div id="sidebar">
			<ul>
				<li class="active"><a href="#"><i class="icon-home"></i> <span>Dashboard</span></a></li>
				<% if !@coupon_list.nil? %>				
					<li><a href= <%= "/widgets/#{@coupon_list.id.to_s}" %> ><i class="icon-inbox"></i> <span>Manage Coupons</span></a></li>
				<% end %>
				<% if !@survey_list.nil? %>				
					<li><a href= <%= "/widgets/#{@survey_list.id.to_s}" %> ><i class="icon-inbox"></i> <span>Manage Surveys</span></a></li>	
				<% end %>	
			</ul>
		
		</div>			
		
		<div id="content">
			<div id="content-header" style = "padding-bottom:0px; margin-bottom:0px;">
				<h1 style = "padding-bottom:0px; margin-bottom:0px;">Welcome, <%= current_merchant.name %>!</h1>				
			</div>
			<div id="breadcrumb" style = "padding-top:0px; margin-top:0px;">
				<a href="#" title="Go to Home" class="tip-bottom current"><i class="icon-home"></i> Home</a>
			</div>
			<div class="container-fluid">
				<div class="row-fluid" style = "margin-top:0;">
					<div class="span6">
						<div class="widget-box">
							<div class="widget-title">
								<span class="icon">
									<i class="icon-file"></i>
								</span>
								<h5>Coupons</h5>
							</div>
							<div class="widget-content nopadding" >
								<ul class="recent-posts">
									<div class = "coupons" style = "height:200px; overflow:auto;">
										<%= render "widgets/showcoupons" %>
									</div>
									<% if !@coupon_list.nil?  %>       
										<li class="viewall">										
											<a title="View all posts" class="tip-top" href= <%= "/widgets/#{@coupon_list.id.to_s}" %> > + View, edit, and manage all coupons + </a>
										</li>
									<% end %>
								</ul>
							</div>
						</div>						
					</div>
					<div class="span6">
						<div class="widget-box">
							<div class="widget-title">
								<span class="icon">
									<i class="icon-file"></i>
								</span>
								<h5>Surveys</h5>
							</div>
							<div class="widget-content nopadding" >
								<ul class="recent-posts">
									<div class = "coupons" style = "height:200px; overflow:auto;">
										<%= render "widgets/showsurveys" %>
									</div>
									<% if !@survey_list.nil?  %>       
										<li class="viewall">
											<a title="View all posts" class="tip-top" href= <%= "/widgets/#{@survey_list.id.to_s}" %> > + View, edit, and manage all surveys + </a>
										</li>
									<% end %>
								</ul>
							</div>
						</div>						
					</div>
				</div>								
			
				<div class="row-fluid">
					<div class="span12">						
						<%= render 'chats/showallforbusiness' %>
					</div>
				</div>
			</div>

			<div class="row-fluid">
				<div id="footer" class="span12">
					2013 &copy; Developed by James Ruben, <a href = "http://www.npatel.me">Neel Patel</a>, and Nithin Tumma.</a>
				</div>
			</div>
		</div>


		
		
            
            <script src="js/jquery.min.js"></script>
            <script src="js/jquery.ui.custom.js"></script>
            <script src="js/bootstrap.min.js"></script>
            <script src="js/unicorn.js"></script>
	</body>
</html>
